# MSP Command Center - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =====================================
# API CONFIGURATION
# =====================================

# LLM Provider Settings
LLM_PROVIDER=openai  # Options: openai, anthropic, none
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =====================================
# MICROSOFT GRAPH / AZURE AD
# =====================================
MS_TENANT_ID=your_tenant_id_here
MS_CLIENT_ID=your_client_id_here
MS_CLIENT_SECRET=your_client_secret_here

# =====================================
# ATERA PSA/RMM
# =====================================
ATERA_API_KEY=your_atera_api_key_here
ATERA_ENDPOINT=https://app.atera.com/api/v3

# =====================================
# GOTO ASSIST / GOTO RESOLVE
# =====================================
GOTO_CLIENT_ID=your_goto_client_id_here
GOTO_CLIENT_SECRET=your_goto_client_secret_here
GOTO_API_KEY=your_goto_api_key_here

# =====================================
# ZOHO DESK
# =====================================
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token_here
ZOHO_ORG_ID=your_zoho_org_id_here

# =====================================
# ZOHO ASSIST
# =====================================
ZOHO_ASSIST_CLIENT_ID=your_zoho_assist_client_id_here
ZOHO_ASSIST_CLIENT_SECRET=your_zoho_assist_client_secret_here
ZOHO_ASSIST_REFRESH_TOKEN=your_zoho_assist_refresh_token_here

# =====================================
# SECURITY SETTINGS
# =====================================
# WARNING: Never commit actual values to version control
# Use this template to know what variables are needed
SESSION_SECRET=generate_a_random_secret_key_here
ENCRYPTION_KEY=generate_a_32_character_encryption_key_here

# =====================================
# APPLICATION SETTINGS
# =====================================
APP_MODE=demo  # Options: demo, sandbox, production
CACHE_TIMEOUT=300000  # milliseconds
RATE_LIMIT_REQUESTS=60  # requests per minute
